{
  "name": "planix",
  "version": "1.0.0",
  "description": "AI-powered professional floor plan generator - Monorepo with backend (Express + Prisma + Postgres) and frontend (Next.js 14 + React)",
  "main": "frontend/index.js",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm run start",
    "lint": "cd frontend && npm run lint",
    "backend:dev": "cd backend && npm run dev",
    "backend:build": "cd backend && npm run build",
    "backend:start": "cd backend && npm start",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:all": "npm run install:frontend && npm run install:backend",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "next": "^14.2.4"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.6.2"
  },
  "keywords": [
    "react",
    "nextjs",
    "typescript",
    "ai",
    "floor-plan",
    "architecture",
    "design",
    "deepseek",
    "gemini"
  ],
  "author": "Bivek Nunisa",
  "license": "ISC",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nunisabivek/Planix.git"
  },
  "bugs": {
    "url": "https://github.com/Nunisabivek/Planix/issues"
  },
  "homepage": "https://github.com/Nunisabivek/Planix#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
